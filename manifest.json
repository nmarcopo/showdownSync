{
    "name": "Showdown Team Backup",
    "version": "1.0",
    "description": "Backup teams from Pokemon Showdown across browsers!",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html"
    },
    "icons":{
        "16": "logo_16.png",
        "32": "logo_32.png",
        "48": "logo_48.png",
        "128": "logo_128.png"
    },
    "options_page": "options.html",
    "manifest_version": 2
}